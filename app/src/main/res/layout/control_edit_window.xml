<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_corner_light"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/control_edit_window_img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_margin="@dimen/activity_margin_middle"
        android:src="@mipmap/btn_closed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin_middle"
        android:layout_marginRight="@dimen/activity_margin_middle"
        android:layout_marginTop="@dimen/activity_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/control_edit_window_txt_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_label_font_color"
            android:textSize="@dimen/font_size_middle" />

        <EditText
            android:id="@+id/control_edit_window_edit_content"
            style="@style/EditTextStyle"
            android:paddingLeft="@dimen/activity_padding_middle"
            android:textSize="@dimen/font_size_edit"
            android:layout_marginLeft="@dimen/activity_margin_middle"
            android:background="@drawable/shape_edit_border" />
    </LinearLayout>

    <Button
        android:id="@+id/control_edit_window_btn_ok"
        style="@style/OvalButtonStyle"
        android:layout_margin="@dimen/activity_margin_large"
        android:text="@string/btn_ok" />
</LinearLayout>