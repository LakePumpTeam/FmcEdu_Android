<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_margin_middle"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_padding_middle"
    android:paddingRight="@dimen/activity_padding_middle">

    <TextView
        android:id="@+id/item_school_dynamic_txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/dynamic_title_color"
        android:textSize="@dimen/font_size_middle" />

    <TextView
        android:id="@+id/item_school_dynamic_txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_margin_small"
        android:singleLine="true"
        android:textColor="@color/dynamic_content_color"
        android:textSize="@dimen/font_size_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_school_dynamic_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/chrysanthemum"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/item_school_dynamic_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin_small"
            android:src="@mipmap/chrysanthemum"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/item_school_dynamic_img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin_small"
            android:src="@mipmap/chrysanthemum"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/item_school_dynamic_img4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin_small"
            android:src="@mipmap/chrysanthemum"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_school_dynamic_txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/dynamic_content_color"
            android:textSize="@dimen/font_size_small" />

        <TextView
            android:id="@+id/item_school_dynamic_txt_read_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:text="查看全文>>"
            android:textColor="@color/dynamic_content_color"
            android:textSize="@dimen/font_size_small" />
    </RelativeLayout>
</LinearLayout>