<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/shape_round_corner_light"
    android:layout_marginLeft="@dimen/activity_margin"
    android:layout_marginRight="@dimen/activity_margin"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/alert_window_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/popup_window_alert_font_color"
        android:textSize="@dimen/font_size_middle"
        android:layout_marginTop="@dimen/activity_margin" />


    <TextView
        android:id="@+id/alert_window_txt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_small"
        android:layout_margin="@dimen/activity_margin"
        android:textColor="@color/popup_window_alert_font_color" />

    <View
        android:layout_width="match_parent"
        android:background="@color/divider_bg_color"
        android:layout_height="@dimen/divider_height" />

    <TextView
        android:id="@+id/alert_window_txt_ok"
        android:layout_width="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_padding"
        android:background="@drawable/shape_text_corner"
        android:textColor="@color/popup_window_alert_btn_font_color"
        android:textSize="@dimen/font_size_middle"
        android:text="确定" />

</LinearLayout>