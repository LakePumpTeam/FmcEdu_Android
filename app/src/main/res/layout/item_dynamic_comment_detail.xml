<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_padding_small"
    android:paddingTop="@dimen/activity_padding_small">

    <TextView
        android:id="@+id/dynamic_comment_detail_txt_comment_name"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_parent_name_font_color"
        android:textSize="@dimen/font_size_middle" />

    <TextView
        android:id="@+id/dynamic_comment_detail_txt_comment_content"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_middle" />
</LinearLayout>