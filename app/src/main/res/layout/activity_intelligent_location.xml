<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fmc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    android:orientation="vertical">

    <com.fmc.edu.customcontrol.TopBarControl
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_top_bar_height"
        fmc:backVisible="true"
        fmc:topTitle="@string/title_activity_intelligent_location" />

    <View
        style="@style/HorizontalDividerLineStyle"
        android:layout_marginTop="@dimen/activity_margin" />

    <TextView
        android:id="@+id/intelligent_location_txt_surrounding"
        style="@style/DropDownShortTextViewStyle"
        android:drawableLeft="@mipmap/ic_surrounding"
        android:drawablePadding="@dimen/activity_padding"
        android:drawableRight="@mipmap/ic_arrow_right"
        android:paddingLeft="@dimen/activity_padding"
        android:paddingRight="@dimen/activity_padding"
        android:text="周边环境"
        android:textSize="@dimen/font_size_middle" />

    <View style="@style/HorizontalDividerLineStyle" />

    <TextView
        android:id="@+id/intelligent_location_txt_location"
        style="@style/DropDownShortTextViewStyle"
        android:drawableLeft="@mipmap/ic_location_small"
        android:drawableRight="@mipmap/ic_arrow_right"
        android:drawablePadding="@dimen/activity_padding"
        android:paddingLeft="@dimen/activity_padding"
        android:paddingRight="@dimen/activity_padding"
        android:text="定位"
        android:textSize="@dimen/font_size_middle" />

    <View style="@style/HorizontalDividerLineStyle" />

    <View
        style="@style/HorizontalDividerLineStyle"
        android:layout_marginTop="@dimen/activity_margin" />

    <TextView
        android:id="@+id/intelligent_location_txt_introduce"
        style="@style/DropDownShortTextViewStyle"
        android:drawableLeft="@mipmap/ic_bracelet_intr"
        android:drawablePadding="@dimen/activity_padding"
        android:drawableRight="@mipmap/ic_arrow_right"
        android:paddingLeft="@dimen/activity_padding"
        android:paddingRight="@dimen/activity_padding"
        android:text="手环介绍"
        android:textSize="@dimen/font_size_middle" />

    <View style="@style/HorizontalDividerLineStyle" />

</LinearLayout>
