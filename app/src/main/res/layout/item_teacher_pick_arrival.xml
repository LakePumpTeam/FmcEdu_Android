<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/activity_bg_color_write"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/item_teacher_pick_arrival_txt_date"
        android:layout_width="0dp"
        android:layout_height="@dimen/edit_text_height"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/text_label_font_color"
        android:textSize="@dimen/font_size_small" />
    <View style="@style/VerticalDividerLineStyle" />



    <TextView
        android:id="@+id/item_teacher_pick_arrival_txt_time"
        android:layout_width="0dp"
        android:layout_height="@dimen/edit_text_height"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/text_label_font_color"
        android:textSize="@dimen/font_size_small" />

    <View style="@style/VerticalDividerLineStyle" />
    <TextView
        android:id="@+id/item_teacher_pick_arrival_txt_student"
        android:layout_width="0dp"
        android:layout_height="@dimen/edit_text_height"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/text_label_font_color"
        android:textSize="@dimen/font_size_small" />

    <View style="@style/VerticalDividerLineStyle" />
    <TextView
        android:id="@+id/item_teacher_pick_arrival_txt_parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/edit_text_height"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/text_label_font_color"
        android:textSize="@dimen/font_size_small" />
</LinearLayout>