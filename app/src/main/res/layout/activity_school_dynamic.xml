<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fmc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    android:orientation="vertical">

    <com.fmc.edu.customcontrol.TopBarControl
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_top_bar_height"
        fmc:backVisible="true"
        fmc:topTitle="@string/title_activity_school_dynamic" />

    <RadioGroup
        android:id="@+id/school_dynamic_rg_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height"
        android:orientation="horizontal">

        <RadioButton
            style="@style/TabRadioStyle"
            android:tag="2"
            android:text="活动" />

        <RadioButton
            style="@style/TabRadioStyle"
            android:tag="3"
            android:text="通知" />

        <RadioButton
            style="@style/TabRadioStyle"
            android:tag="4"
            android:text="新闻" />
    </RadioGroup>

    <com.fmc.edu.customcontrol.SlideListView
        android:id="@+id/school_dynamic_slide_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>

