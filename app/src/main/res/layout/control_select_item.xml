<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/select_item_txt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <TextView
        android:id="@+id/select_item_txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin_middle"
        android:textColor="@color/edit_text_font_color"
        android:textSize="@dimen/font_size_middle" />

    <View style="@style/HorizontalDividerLineStyle"></View>

</LinearLayout>