<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fmc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color_write"
    android:orientation="vertical">

    <com.fmc.edu.customcontrol.TopBarControl
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_top_bar_height"
        fmc:backVisible="true"
        fmc:topTitle="@string/title_activity_kid_school" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.fmc.edu.customcontrol.AutoSlidePictureControl
                android:id="@+id/kid_school_slide_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <View style="@style/HorizontalDividerLineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <com.fmc.edu.customcontrol.SlideListView
                android:id="@+id/kid_school_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/activity_bg_color_write" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
