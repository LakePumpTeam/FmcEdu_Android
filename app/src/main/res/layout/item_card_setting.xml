<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color_write"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_card_setting_txt_card_no"
        android:layout_width="0dp"
        android:layout_height="@dimen/edit_text_height"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/text_label_font_color"
        android:textSize="@dimen/font_size_small" />

    <View style="@style/VerticalDividerLineStyle" />

    <TextView
        android:id="@+id/item_card_setting_txt_parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/edit_text_height"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/text_label_font_color"
        android:textSize="@dimen/font_size_small" />

    <View style="@style/VerticalDividerLineStyle" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/edit_text_height"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/item_card_setting_tv_lose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin_middle"
            android:layout_marginRight="@dimen/activity_margin_middle"
            android:clickable="true"
            android:background="@drawable/selector_btn_corner_enable"
            android:gravity="center"
            android:padding="@dimen/activity_padding_middle"
            android:singleLine="true"
            android:text="@string/str_click_lose"
            android:textColor="@color/selector_check"
            android:textSize="@dimen/font_size_small" />
    </LinearLayout>


    <View style="@style/VerticalDividerLineStyle" />

    <TextView
        android:id="@+id/item_card_setting_txt_comment"
        android:layout_width="0dp"
        android:layout_height="@dimen/edit_text_height"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/text_label_font_color"
        android:textSize="@dimen/font_size_small" />
</LinearLayout>