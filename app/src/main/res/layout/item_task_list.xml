<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/item_task_list_ck_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_check_finish"
        android:button="@null"
        android:enabled="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_task_list_txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/dynamic_title_color"
            android:textSize="@dimen/font_size_middle_title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_task_list_txt_manager"
                style="@style/TextStyle"
                android:textColor="@color/edit_text_hint_font_color"
                android:textSize="@dimen/font_size_small" />

            <TextView
                android:id="@+id/item_task_list_txt_date"
                style="@style/TextStyle"
                android:layout_alignParentRight="true"
                android:textColor="@color/edit_text_hint_font_color"
                android:textSize="@dimen/font_size_small" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>