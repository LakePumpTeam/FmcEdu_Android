<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_task_list_img_status"
        android:layout_width="48dp"
        android:clickable="true"

        android:layout_height="match_parent"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin_middle"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_task_list_txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/dynamic_title_color"
            android:textSize="@dimen/font_size_middle" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_small"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_task_list_txt_manager"
                style="@style/TextStyle"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/activity_margin"
                android:layout_toLeftOf="@+id/item_task_list_txt_date"
                android:textColor="@color/edit_text_hint_font_color"
                android:textSize="@dimen/font_size_small" />

            <TextView
                android:id="@+id/item_task_list_txt_date"
                style="@style/TextStyle"
                android:layout_alignParentRight="true"
                android:textColor="@color/edit_text_hint_font_color"
                android:textSize="@dimen/font_size_small" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>