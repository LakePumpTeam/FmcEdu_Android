<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_margin_middle"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/task_detail_comment_img_head_photo"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginLeft="@dimen/activity_margin_middle"
        android:scaleType="centerInside"
        android:src="@mipmap/head_photo_boy" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin_middle">

        <TextView
            android:id="@+id/task_detail_comment_txt_name"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/task_detail_comment_txt_date" />

        <TextView
            android:id="@+id/task_detail_comment_txt_date"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/edit_text_hint_font_color" />

        <TextView
            android:id="@+id/task_detail_comment_txt_content"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/task_detail_comment_txt_name"
            android:layout_marginTop="@dimen/activity_margin_small" />

    </RelativeLayout>
</LinearLayout>