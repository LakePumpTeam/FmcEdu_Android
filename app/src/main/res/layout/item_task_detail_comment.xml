<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/task_detail_comment_img_head_photo"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/activity_margin_middle"
        android:layout_marginLeft="@dimen/activity_margin_middle"
        android:layout_marginTop="@dimen/activity_margin_middle"
        android:scaleType="centerInside"
        android:src="@mipmap/head_photo_boy" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin_middle"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/task_detail_comment_txt_name"
                style="@style/TextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/task_detail_comment_txt_date" />

            <TextView
                android:id="@+id/task_detail_comment_txt_date"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/edit_text_hint_font_color" />

        </RelativeLayout>

        <TextView
            android:id="@+id/task_detail_comment_txt_content"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_middle" />
    </LinearLayout>

</LinearLayout>