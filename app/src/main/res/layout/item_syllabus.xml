<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/divider_bg_color"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_syllabus_txt_course_num"
            android:layout_width="0dp"
            android:layout_height="@dimen/edit_text_height"
            android:layout_weight="2"
            android:ellipsize="end"
            android:background="@color/bg_syllabus"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/text_font_color"
            android:textSize="@dimen/font_size_small" />

        <TextView
            android:id="@+id/item_syllabus_txt_course_name"
            android:layout_width="0dp"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="4"
            android:background="@color/bg_syllabus"
            android:gravity="center"
            android:hint="@string/btn_add"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/syllabus_font_color"
            android:textColorHint="@color/edit_text_hint_font_color"
            android:textSize="@dimen/font_size_small" />

        <TextView
            android:id="@+id/item_syllabus_txt_course_time"
            android:layout_width="0dp"
            android:layout_height="@dimen/edit_text_height"
            android:layout_weight="3"
            android:background="@color/bg_syllabus"
            android:gravity="center"
            android:hint="@string/btn_add"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/syllabus_font_color"
            android:textColorHint="@color/edit_text_hint_font_color"
            android:textSize="@dimen/font_size_small" />
    </LinearLayout>
</LinearLayout>