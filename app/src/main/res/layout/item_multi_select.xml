<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_margin"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/multi_select_item_txt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/multi_select_item_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:button="@drawable/selector_check_box_check"
        android:paddingLeft="@dimen/activity_padding_middle" />

    <TextView
        android:id="@+id/multi_select_item_txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin_middle"
        android:layout_marginLeft="@dimen/activity_margin"
        android:textColor="@color/select_item_font_color"
        android:textSize="@dimen/font_size_middle" />

</LinearLayout>