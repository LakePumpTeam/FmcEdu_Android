<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="OvalButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:textSize">@dimen/font_size_middle</item>
        <item name="android:textColor">@color/btn_font_color_enable</item>
        <item name="android:background">@drawable/selector_btn_oval_corner</item>
    </style>

    <style name="OvalButtonStyleBorder" parent="OvalButtonStyle">
        <item name="android:background">@drawable/selector_btn_oval_corner_border</item>
    </style>

    <style name="DropDownShortTextViewStyle" parent="ClickTextViewStyle">

        <item name="android:drawableRight">@mipmap/ic_arrow_down</item>
    </style>

    <style name="ClickTextViewStyle">
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:paddingLeft">@dimen/activity_padding_small</item>
        <item name="android:paddingRight">@dimen/activity_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/activity_padding_middle</item>
        <item name="android:background">@drawable/selector_list_item_bg</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColorHint">@color/edit_text_hint_font_color</item>
        <item name="android:textColor">@color/edit_text_font_color</item>
    </style>

    <style name="HorizontalDividerLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/divider_bg_color</item>
    </style>

    <style name="VerticalGradientDividerLineStyle">
        <item name="android:layout_width">@dimen/divider_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/shape_layout_vertical_gradient_color</item>
    </style>

    <style name="HorizontalGradientDividerLineStyle" parent="HorizontalDividerLineStyle">
        <item name="android:background">@drawable/shape_layout_horizontal_gradient_color</item>
    </style>


    <style name="EditTextStyle">
        <item name="android:background">@color/edit_text_bg_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:paddingLeft">@dimen/activity_padding_small</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/edit_text_font_color</item>
        <item name="android:textColorHint">@color/edit_text_hint_font_color</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>


    <style name="LabelTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_middle</item>
        <item name="android:textColor">@color/text_label_font_color</item>
        <item name="android:background">@color/edit_text_bg_color</item>
    </style>

    <style name="TabRadioStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/select_radio_btn_bg_color</item>
        <item name="android:textColor">@drawable/selector_radio_btn_font_color</item>
        <item name="android:textSize">@dimen/font_size_middle</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_font_color</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>


    <style name="TitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_font_color</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>


    <style name="ValidateButtonStyle" parent="OvalButtonStyle">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/activity_padding_middle</item>
        <item name="android:paddingBottom">@dimen/activity_padding_middle</item>
    </style>


</resources>
