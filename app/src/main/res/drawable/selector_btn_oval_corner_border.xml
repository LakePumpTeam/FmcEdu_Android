<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/btn_bg_color_un_enable"></solid>
            <corners android:radius="1000dp"></corners>
            <stroke android:width="1dp"
                android:color="@color/edit_text_border_color"
                android:dashGap="0.5dp"
                android:dashWidth="0.5dp"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/btn_bg_color_sel" />
            <corners android:radius="1000dp" />
            <stroke android:width="1dp"
                android:color="@color/edit_text_border_color"
                android:dashGap="0.5dp"
                android:dashWidth="0.5dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/btn_bg_color_sel"></solid>
            <corners android:radius="1000dp"></corners>
            <stroke android:width="1dp"
                android:color="@color/edit_text_border_color"
                android:dashGap="0.5dp"
                android:dashWidth="0.5dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/btn_bg_color_nor"></solid>
            <corners android:radius="1000dp"></corners>
            <stroke android:width="1dp"
                android:color="@color/edit_text_border_color"
                android:dashGap="0.5dp"
                android:dashWidth="0.5dp" />
        </shape>
    </item>

</selector>